<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TourPlanner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="0" Grid.Row="0" Margin="5,5,5,5">
            <TextBlock Text="Name:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <TextBox VerticalAlignment="Center" Text="{Binding SearchName, Mode=TwoWay}"/>
            <Button Width="200" Margin="5,5,5,5" Command="{Binding SearchCommand}">Search</Button>
            <Button Width="200" Margin="5,5,5,5" Command="{Binding ClearCommand}" CommandParameter="Clear">Clear</Button>
        </StackPanel>

        <ListBox Grid.Column="0" Grid.Row="1" Margin="5,5,5,5"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding CurrentTour}"
                DisplayMemberPath="Name" />
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="5,5,5,5">
            <Button Width="200" Margin="5,5,5,5" Command="{Binding AddTourCommand}" CommandParameter="AddTour">Add</Button>
        </StackPanel>

        <ContentControl Grid.Column="1" Grid.RowSpan="3" Content="{Binding SelectedViewModel}"/>
    </Grid>
</Window>
